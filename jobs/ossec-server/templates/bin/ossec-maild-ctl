#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/ossec-server/helpers/ctl_setup.sh 'ossec-server' 'ossec-maild'

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec /var/vcap/packages/ossec-server/bin/ossec-maild -f \
         -u root -g root \
         -c /var/vcap/jobs/ossec-server/config/ossec.conf \
         -D /var/vcap/store/ossec-server \
         >>$LOG_DIR/$JOB_NAME.maild.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: ossec-maild-ctl {start|stop}"

    ;;

esac
exit 0
