#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/wazuh-server/helpers/ctl_setup.sh 'wazuh-server' 'ossec-authd'
if [ ! -d /var/vcap/store/wazuh-server/bin ]
then
  cp -R /var/vcap/packages/wazuh-server/. /var/vcap/store/wazuh-server/.
fi

echo <%= p('ossec.authd.password', '') %> >> /var/vcap/store/wazuh-server/etc/authd.pass

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec /var/vcap/store/wazuh-server/bin/ossec-authd -P -g root -f 20 -i \
         -x /var/vcap/jobs/wazuh-server/config/ssl/ssl_cert.pem \
         -k /var/vcap/jobs/wazuh-server/config/ssl/ssl_key.pem \
         -D /var/vcap/store/wazuh-server \
         >>$LOG_DIR/$JOB_NAME.authd.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: ossec-authd-ctl {start|stop}"

    ;;

esac
exit 0
