#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=wazuh_server
JOB_DIR=/var/vcap/jobs/$JOB_NAME
PACKAGE_DIR=/var/vcap/packages/wazuh-server
STORE_DIR=/var/vcap/store/$JOB_NAME
CONFIG=$JOB_DIR/config/$JOB_NAME.yml
RUN_DIR=/var/vcap/sys/run/$JOB_NAME
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
PIDFILE=${RUN_DIR}/${1}.pid
WAZUH_VERSION=wazuh-server-3.0.0

if [ ! -f $PACKAGE_DIR/$WAZUH_VERSION/bin/ossec-control ]; then
    cp $JOB_DIR/etc/preloaded-vars.conf ${PACKAGE_DIR}/WAZUH_VERSION/etc/preloaded-vars.conf
    export USER_DIR=${PACKAGE_DIR}/${WAZUH_VERSION}
    cd ${USER_DIR}
    ./install.sh
fi

case $2 in

  start)
    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    mkdir -p $STORE_DIR

    echo $$ > $PIDFILE
    exec ${PACKAGE_DIR}/${WAZUH_VERSION}/bin/$1 -f -d \
            -c ${JOB_DIR}/etc/ossec-server.conf \
         >>${LOG_DIR}/${JOB_NAME}_${1}.stdout.log \
         2>>${LOG_DIR}/${JOB_NAME}_${1}.stderr.log
    ;;


  stop)
    kill -9 $PIDFILE
    rm -rf $PIDFILE

    ;;
  *)
    echo "Usage: wazuh_server_ctl {start|stop}"

    ;;

esac
exit 0