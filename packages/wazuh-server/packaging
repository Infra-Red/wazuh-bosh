set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)
# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
export HOME=/var/vcap

VERSION=3.0.0
VERSION_TAR=3.0

tar xzvf wazuh-server/wazuh-server-${VERSION}.tar.gz

# Prepare unattended installation
echo '
USER_NO_STOP="n"
USER_LANGUAGE="en"
USER_INSTALL_TYPE="server"
USER_DELETE_DIR="y"
USER_DIR="/var/vcap/store/wazuh-server"
USER_ENABLE_EMAIL="n"
USER_ENABLE_ACTIVE_RESPONSE="n"
USER_ENABLE_SYSCHECK="y"
USER_ENABLE_ROOTCHECK="y"
USER_ENABLE_OPENSCAP="n"
USER_ENABLE_SYSLOG="n"
USER_WHITE_LIST="192.168.2.1 192.168.1.0/24"
' > wazuh-${VERSION_TAR}/etc/preloaded-vars.conf

# Compile
pushd wazuh-${VERSION_TAR}/src
make -j${CPUS} PREFIX=/var/vcap/store/wazuh-server TARGET=server
popd

# Install
pushd wazuh-${VERSION_TAR}
./install.sh
popd
