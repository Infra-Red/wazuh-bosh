#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders
chown -Rf ossec:ossec /var/vcap/store/wazuh-server/logs
source /var/vcap/jobs/wazuh-server/helpers/ctl_setup.sh 'wazuh-server' 'ossec-execd'
if [ ! -d /var/vcap/store/wazuh-server/bin ]
then
  cp -R /var/vcap/packages/wazuh-server/. /var/vcap/store/wazuh-server/.
fi
case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec /var/vcap/store/wazuh-server/bin/ossec-execd -f \
         -g root \
         -c /var/vcap/jobs/wazuh-server/config/ossec.conf \
         >>$LOG_DIR/$JOB_NAME.execd.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: ossec-execd-ctl {start|stop}"

    ;;

esac
exit 0
