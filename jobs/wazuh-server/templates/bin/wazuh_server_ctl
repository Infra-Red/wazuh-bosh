#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=wazuh-server
JOB_DIR=/var/vcap/jobs/$JOB_NAME
PACKAGE_DIR=/var/vcap/packages/wazuh-server
STORE_DIR=/var/vcap/store/$JOB_NAME
CONFIG=$JOB_DIR/config/$JOB_NAME.yml
RUN_DIR=/var/vcap/sys/run/$JOB_NAME
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
PIDFILE=${RUN_DIR}/${1}.pid
WAZUH_VERSION=wazuh-server-3.0.0

if [ ! -f $PACKAGE_DIR/$WAZUH_VERSION/bin/ossec-control ]; then
    cp $JOB_DIR/config/preloaded-vars.conf ${PACKAGE_DIR}/${WAZUH_VERSION}/source_code/etc/preloaded-vars.conf
    export USER_DIR=${PACKAGE_DIR}/${WAZUH_VERSION}
    cd ${USER_DIR}/source_code
    ./install.sh
    cp $JOB_DIR/config/sslmanager.cert $JOB_DIR/config/sslmanager.key ${PACKAGE_DIR}/${WAZUH_VERSION}/etc/
fi

case $2 in

  start)
    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    mkdir -p $STORE_DIR
	case $1 in
		"ossec-authd")
			echo $$ > $PIDFILE
			exec ${PACKAGE_DIR}/${WAZUH_VERSION}/bin/$1 -f -d \
					-x ${PACKAGE_DIR}/${WAZUH_VERSION}/etc/sslmanager.cert \
					-k ${PACKAGE_DIR}/${WAZUH_VERSION}/etc/sslmanager.key \
				 >>${LOG_DIR}/${JOB_NAME}_${1}.stdout.log \
				 2>>${LOG_DIR}/${JOB_NAME}_${1}.stderr.log
		;;
		"wazuh-modulesd")
			echo $$ > $PIDFILE
			exec ${PACKAGE_DIR}/${WAZUH_VERSION}/bin/$1 -f -d \
				 >>${LOG_DIR}/${JOB_NAME}_${1}.stdout.log \
				 2>>${LOG_DIR}/${JOB_NAME}_${1}.stderr.log
		;;
		*)
			echo $$ > $PIDFILE
			exec ${PACKAGE_DIR}/${WAZUH_VERSION}/bin/$1 -f -d \
					-c ${PACKAGE_DIR}/${WAZUH_VERSION}/etc/ossec.conf \
				 >>${LOG_DIR}/${JOB_NAME}_${1}.stdout.log \
				 2>>${LOG_DIR}/${JOB_NAME}_${1}.stderr.log
		;;
		esac

    ;;


  stop)
    kill -9 $PIDFILE
    rm -rf $PIDFILE

    ;;
  *)
    echo "Usage: wazuh_server_ctl {ossec-daemon}{start|stop}"

    ;;

esac
exit 0